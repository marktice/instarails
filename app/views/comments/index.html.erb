<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Medium</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.user.email %></td>
        <td><%= comment.medium %></td>
        <td><%= link_to 'Show', medium_comment_path(comment.medium, comment) %></td>
        <td><%= link_to 'Edit', edit_medium_comment_path(comment.medium, comment) %></td>
        <td><%= link_to 'Destroy', medium_comment_path(comment.medium, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_medium_comment_path %>
